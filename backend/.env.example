# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-render-app.onrender.com,localhost,127.0.0.1

# Database (provided by Render PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Frontend URL (your Vercel deployment)
FRONTEND_URL=https://your-app.vercel.app

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:5173

# Email Configuration (optional - for password reset and notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Riderspool <noreply@riderspool.com>
